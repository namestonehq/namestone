datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URI")
}

model user_engagement {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now())
  address    String?
  name       String?
  details    Json?
}

model domain {
  id               Int                  @id @default(autoincrement())
  created_at       DateTime             @default(now())
  address          String?
  name             String?
  contenthash      String?
  name_limit       Int                  @default(0)
  subdomains       subdomain[]
  text_records     domain_text_record[]
  eligibility_item eligibility_item[]
  admin            admin[]
  brand            brand[]

  @@index([name], map: "domain__name")
}

model domain_text_record {
  id        Int     @id @default(autoincrement())
  domain_id Int
  domain    domain  @relation(fields: [domain_id], references: [id])
  key       String?
  value     String?

  @@index([domain_id], map: "domain_text_record__domain_id")
}

model subdomain {
  id           Int                     @id @default(autoincrement())
  created_at   DateTime                @default(now())
  address      String?
  name         String?
  domain_id    Int
  domain       domain                  @relation(fields: [domain_id], references: [id])
  contenthash  String?
  text_records subdomain_text_record[]
  coin_types   subdomain_coin_type[]

  @@index([address], map: "subdomain__address")
  @@index([domain_id], map: "subdomain__domain_id")
  @@index([name], map: "subdomain__name")
}

model subdomain_text_record {
  id           Int       @id @default(autoincrement())
  subdomain_id Int
  subdomain    subdomain @relation(fields: [subdomain_id], references: [id])
  key          String?
  value        String?

  @@index([subdomain_id], map: "subdomain_text_record__subdomain_id")
}

model eligibility_item {
  id          Int     @id @default(autoincrement())
  domain_id   Int
  domain      domain  @relation(fields: [domain_id], references: [id])
  display     String?
  requirement String?
  parameters  Json?
}

model admin {
  id        Int     @id @default(autoincrement())
  domain_id Int
  domain    domain  @relation(fields: [domain_id], references: [id])
  address   String?
}

model super_admin {
  id      Int     @id @default(autoincrement())
  address String?
}

model brand {
  id                        Int     @id @default(autoincrement())
  domain_id                 Int
  domain                    domain  @relation(fields: [domain_id], references: [id])
  name                      String?
  url_slug                  String?
  claim_slug                String?
  description               String?
  banner_image              String?
  footer_image              String?
  default_avatar            String?
  default_description       String?
  share_with_data_providers Boolean @default(false)
  show_converse_link        Boolean @default(false)
  show_mailchain_link       Boolean @default(false)
}

model brand_text_record {
  id            Int     @id @default(autoincrement())
  domain_id     Int
  key           String?
  default_value String?
}

model api_key {
  id        Int     @id @default(autoincrement())
  domain_id Int
  key       String?
}

model name_resolution {
  id              Int      @id @default(autoincrement())
  resolution_time DateTime @default(now())
  subdomain_id    Int
}

model subdomain_coin_type {
  id           Int       @id @default(autoincrement())
  subdomain_id Int
  subdomain    subdomain @relation(fields: [subdomain_id], references: [id])
  coin_type    String?
  address      String?
}

model data_provider {
  id           Int     @id @default(autoincrement())
  api_key      String?
  company_name String?
}

model blocklist {
  id    Int     @id @default(autoincrement())
  uid   String?
  words Json
}
